<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adventure11"
    android:orientation="vertical"
    android:background="@drawable/background_nude"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BAFFFFFF"
        android:orientation="vertical">


    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/adventure11"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        android:background="@drawable/adventure11"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adventure4_des"
        android:padding="9dp"
        android:layout_marginLeft="11dp"
        android:textAlignment="textStart"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>
    </LinearLayout>
</LinearLayout>