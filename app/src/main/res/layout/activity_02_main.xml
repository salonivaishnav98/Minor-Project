                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/np_kuno"
                                android:background="@drawable/image_button_shape"
                                android:scaleType="fitXY"
                                android:contentDescription="@string/FortsPlaces"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/upper"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/upper"
                                android:fontFamily="serif"
                                android:text="@string/Nature"
                                android:textSize="17sp"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                            <ImageButton
                                android:id="@+id/tourist_attraction_nature"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/bhedaghat"
                                android:background="@drawable/image_button_shape"
                                android:scaleType="fitXY"
                                android:contentDescription="@string/FortsPlaces"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/upper"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/upper"
                                android:fontFamily="serif"
                                android:text="@string/Spirituals"
                                android:textSize="17sp"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                            <ImageButton
                                android:id="@+id/tourist_attraction_spirituals"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/img6"
                                android:scaleType="fitXY"
                                android:contentDescription="@string/FortsPlaces"
                                />

                        </LinearLayout>
                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>

        <LinearLayout
