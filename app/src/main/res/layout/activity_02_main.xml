                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="serif"
                android:paddingLeft="5dp"
                android:text="@string/TouristDestinations"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/upper"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/upper"
                                android:fontFamily="serif"
                                android:text="@string/Indore"
                                android:textSize="17sp"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                            <ImageButton
                                android:id="@+id/indore"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/chappan"
                                android:background="@drawable/image_button_shape"
                                android:scaleType="fitXY"
                                android:contentDescription="@string/Indore"
                                />

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/upper"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/upper"
                                android:fontFamily="serif"
                                android:textSize="17sp"
                                android:text="@string/Ujjain"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                            <ImageButton
                                android:id="@+id/ujjain"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/mahakaleshwar"
                                android:background="@drawable/image_button_shape"
                                android:scaleType="fitXY"
                                android:contentDescription="@string/Ujjain"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/upper"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/upper"
                                android:fontFamily="serif"
                                android:text="@string/Bhopal"
                                android:textSize="17sp"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                            <ImageButton
                                android:id="@+id/bhopal"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/bhopalcity"
                                android:background="@drawable/image_button_shape"
                                android:scaleType="fitXY"
                                android:contentDescription="@string/Indore"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/upper"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/upper"
                                android:fontFamily="serif"
                                android:text="@string/Gwalior"
                                android:textSize="17sp"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                            <ImageButton
                                android:id="@+id/gwalior"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/fort_gwalior"
                                android:scaleType="fitXY"
                                android:background="@drawable/image_button_shape"
                                android:contentDescription="@string/Gwalior"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/upper"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/upper"
                                android:fontFamily="serif"
                                android:text="@string/Khajuraho"
                                android:textSize="17sp"
                                android:textAlignment="center"
                                android:textColor="@color/black" />

                            <ImageButton
                                android:id="@+id/khajuraho"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img6"
                                android:background="@drawable/image_button_shape"
                                android:scaleType="fitXY"
                                android:contentDescription="@string/Khajuraho" />

                        </LinearLayout>
                    </LinearLayout>

                </HorizontalScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingLeft="5dp"
                android:text="@string/ExploreMP"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/upper"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:fontFamily="serif"
                                android:textSize="17sp"
                                android:background="@drawable/upper"
