                                android:layout_height="80dp"
                                android:background="@drawable/celebration"
                                android:contentDescription="@string/ExploreMP"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="@string/Events"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/upper">

                            <ImageButton
                                android:id="@+id/touristattraction"
                                android:layout_width="80dp"
                                android:layout_height="70dp"
                                android:background="@drawable/fortcartoon"
                                android:contentDescription="@string/ArtandCraft"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="@string/TouristAttraction"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/upper">

                            <ImageButton
                                android:id="@+id/photosbtn"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/camerasticker"
                                android:contentDescription="@string/ForestandWildlife"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="@string/Photos"
                                android:textAlignment="center"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/upper">

                            <ImageButton
                                android:id="@+id/plan_trip"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/calendar"
                                android:contentDescription="@string/PlanYourTrip"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="@string/PlanYourTrip"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
