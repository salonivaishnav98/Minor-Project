                android:layout_height="wrap_content"
                android:background="@drawable/panchmarhi_hill"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/choraldam"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/khajuraho_night"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/adventure2"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/food8"
                android:scaleType="fitXY" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/np_kuno"
                android:scaleType="fitXY" />



        </ViewFlipper>
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/lower">

           <!--   <androidx.appcompat.widget.SearchView
                  android:id="@+id/search_city"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:queryHint="Search City"
                  android:background="@drawable/upper"
                  android:layout_margin="5dp"
                  app:iconifiedByDefault="false"
                  />-->
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:paddingLeft="5dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/upper">

                            <ImageButton
                                android:id="@+id/experienceMP"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/namste_backgraound"
                                android:contentDescription="@string/ExperienceMP"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="@string/ExperienceMP"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
