                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/upper"
                                android:textAlignment="center"
                                android:textSize="17sp"
                                android:fontFamily="serif"
                                android:text="@string/SoundandLightShows"
                                android:textColor="@color/black" />
                            <ImageButton
                                android:id="@+id/explore_lihghtshow"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/orcha_night"
                                android:scaleType="fitXY"
                                android:background="@drawable/image_button_shape"
                                android:contentDescription="@string/Ujjain"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/upper"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/upper"
                                android:fontFamily="serif"
                                android:textAlignment="center"
                                android:textSize="17sp"
                                android:text="@string/FFood"
                                android:textColor="@color/black" />
                            <ImageButton
                                android:id="@+id/explore_food"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/food8"
                                android:scaleType="fitXY"
                                android:background="@drawable/image_button_shape"
                                android:contentDescription="@string/Indore"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/upper"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/upper"
                                android:fontFamily="serif"
                                android:textAlignment="center"
                                android:text="@string/MusicandDance"
                                android:textSize="17sp"
                                android:textColor="@color/black" />
                            <ImageButton
                                android:id="@+id/explore_Dance"
                                android:layout_marginTop="5dp"
