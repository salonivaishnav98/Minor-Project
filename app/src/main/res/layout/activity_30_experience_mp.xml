<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ExperienceMP"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lower"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp"
        android:text="@string/ExperienceMP"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/upper"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageButton
                    android:id="@+id/night_tourism"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/NightTourism"
                    android:scaleType="fitXY"
                    android:background="@drawable/chappan"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:text="@string/NightTourism"
                    android:textAlignment="center"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/upper"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageButton
                    android:id="@+id/sound_light_btn"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/NightTourism"
                    android:scaleType="fitXY"
                    android:background="@drawable/sachinight"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/SoundandLightShows"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/upper"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageButton
                    android:id="@+id/musicdances"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:contentDescription="@string/NightTourism"
                    android:scaleType="fitXY"
                    android:layout_margin="10dp"
                    android:background="@drawable/saila_dance"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/MusicandDance"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/upper"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageButton
                    android:id="@+id/textiles"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:contentDescription="@string/NightTourism"
                    android:scaleType="fitXY"
                    android:layout_margin="10dp"
                    android:background="@drawable/shop10"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textiles"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/upper"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageButton
                    android:id="@+id/shopping"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:contentDescription="@string/NightTourism"
                    android:scaleType="fitXY"
                    android:layout_margin="10dp"
                    android:background="@drawable/market_sarafa"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Shopping"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/upper"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageButton
                    android:id="@+id/adventure"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:contentDescription="@string/NightTourism"
                    android:scaleType="fitXY"
                    android:layout_margin="10dp"
                    android:background="@drawable/safari"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Adventure"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/upper"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:contentDescription="@string/NightTourism"
                    android:scaleType="fitXY"
                    android:background="@drawable/food"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Food"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/upper"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:contentDescription="@string/NightTourism"
                    android:scaleType="fitXY"
                    android:background="@drawable/bike"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/PlaceOnWheels"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>